<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper-board">

	<select id="getBoardList" resultType="com.fivegirls.burger.vo.BoardVO">
		select board_pk
			,user_pk
			,board_title
			,board_body
			,board_reg_date
			,board_view_count
		from board
	</select>


	<delete id="deleteBoard" parameterType="int">
		delete from board
		where board_pk = #{boardPk}
	</delete>


	<insert id="createBoard" parameterType="com.fivegirls.burger.vo.BoardVO">
		insert into board(user_pk
			,board_title
			,board_body
			,board_reg_date
			,board_view_count)
		values (#{userPk}, #{boardTitle},
		#{boardBody}, #{boardRegDate}, #{boardViewCount})
	</insert>


	<update id="edit" parameterType="com.fivegirls.burger.vo.BoardVO">
		update board
			set board_title = #{boardTitle}
			,board_body = #{boardBody}
		where board_pk = #{boardPk}
	</update>

</mapper>